{
  "name": "boilerplate-remit",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "engines": {
    "node": ">=8"
  },
  "private": true,
  "scripts": {
    "start": "node src",
    "test": "ava",
    "fix": "eslint fix"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "dotenv": "^4.0.0",
    "lodash": "^4.17.4",
    "pino": "^4.7.2",
    "remit": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.32",
    "ava": "^0.22.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "proxyrequire": "^1.0.15"
  },
  "ava": {
    "files": [
      "src/**/*spec.js",
      ".test/**/*.js"
    ],
    "source": [
      ".test/**/*.{js}",
      "src/**/*.{js}"
    ],
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": true,
    "tap": false,
    "powerAssert": false,
    "match": [
      "!integration*"
    ]
  }
}
